{% set tableAlias = constant('MauticPlugin\\CustomObjectsBundle\\Entity\\CustomItem::TABLE_ALIAS') %}
{% set routeView = constant('MauticPlugin\\CustomObjectsBundle\\Provider\\CustomItemRouteProvider::ROUTE_VIEW') %}
{% set routeList = constant('MauticPlugin\\CustomObjectsBundle\\Provider\\CustomItemRouteProvider::ROUTE_LIST') %}

{% set routerSelf = path(routeList, {
    'objectId': customObject.getId(),
    'filterEntityId': filterEntityId,
    'filterEntityType': filterEntityType,
    'lookup': lookup,
    'tmpl': 'list',
}) %}

{% if items|length %}
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered asset-list" id="assetTable">
            <thead>
            <tr>
                {{- include('MauticCoreBundle:Helper:tableheader.html.twig', {
                        'checkall'        : 'true',
                        'target'          : target,
                        'langVar'         : 'custom.item',
                        'routeBase'       : 'custom_item',
                        'baseUrl'         : routerSelf
                }) -}}
                {{- include('MauticCoreBundle:Helper:tableheader.html.twig', {
                        'sessionVar' : sessionVar,
                        'orderBy'    : tableAlias~'.name',
                        'text'       : 'mautic.core.name',
                        'class'      : 'col-custom_item_name',
                        'baseUrl'    : routerSelf,
                        'target'     : target
                }) -}}
                {{- include('MauticCoreBundle:Helper:tableheader.html.twig', {
                        'sessionVar' : sessionVar,
                        'orderBy'    : tableAlias~'.id',
                        'text'       : 'mautic.core.id',
                        'default'    : true,
                        'baseUrl'    : routerSelf,
                        'target'     : target
                }) -}}

                {% if fieldData is not empty %}
                    {% for columnLabel in fieldData.getColumnLabels() %}
                        {{- include('MauticCoreBundle:Helper:tableheader.html.twig', { 'text' : columnLabel }) -}}
                    {% endfor %}
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        {{- include('MauticCoreBundle:Helper:list_actions.html.twig', { 'item' : item }) -}}
                    </td>
                    <td>
                        <div>
                            {{ filterEntityId is empty ? include('MauticCoreBundle:Helper:publishstatus_icon.html.twig', { 'item' : item, 'model' : 'custom.item' }) : ''  }}
                            <a href="{{ path(routeView, {'objectId' : customObject.getId(), 'itemId' : item.getId()}) }}"
                               data-toggle="ajax">
                                {{ item.getName() }}
                            </a>
                        </div>
                    </td>
                    <td>
                        {{ item.getId() }}
                    </td>
                    {% if fieldData is not empty %}
                        {% for fieldValue in fieldData.getFields(item.getId()) %}
                            <td>
                                {{- include('CustomObjectsBundle:CustomField:value.html.twig', { 'fieldValue' : fieldValue }) -}}
                            </td>
                        {% endfor %}
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        {{- include(
            'MauticCoreBundle:Helper:pagination.html.twig',
            {
                'totalItems'  : itemCount,
                'page'        : page,
                'limit'       : limit,
                'baseUrl'     : true,
                'baseUrl'     : path(routeList, {'objectId' : customObject.getId()}),
                'queryString' : "&filterEntityId={$filterEntityId}&filterEntityType={$filterEntityType}&lookup={$lookup}",
                'sessionVar'  : sessionVar,
                'routeBase'   : routeList,
                'target'      : target,
            }
        ) -}}
    </div>
{%  else %}
    {{- include('MauticCoreBundle:Helper:noresults.html.twig', { 'tip' : lookup ? 'custom.item.link.noresults.tip' : 'custom.object.noresults.tip' }) -}}
{% endif %}
